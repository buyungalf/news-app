<%- include('templates/header')-%>

  <h1 class="text-center mt-2">
    <%=item.title%>
  </h1>
  <p title="Source Title" class="text-center">by <%=item.author%>
  </p>


  <main class="container">
    <div class="d-flex align-items-center p-3 my-3 text-white bg-purple rounded shadow-sm">
      <img src="/<%=item.thumbnail%>" width="1200" alt="" />

    </div>

    <div class="my-3 p-3 bg-body rounded shadow-sm">
      <p>
        <%=item.content%>
      </p>
      <h6 class="border-bottom pb-2 mb-0">Recent comments</h6>
      <%comments.forEach(function(comment){ %>
        <div class="d-flex text-muted pt-3">
          <svg class="bd-placeholder-img flex-shrink-0 me-2 rounded" width="32" height="32"
            xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 32x32"
            preserveAspectRatio="xMidYMid slice" focusable="false">
            <title>Placeholder</title>
            <rect width="100%" height="100%" fill="#007bff" /><text x="50%" y="50%" fill="#007bff"
              dy=".3em">32x32</text>
          </svg>
          <p class="pb-3 mb-0 small lh-sm border-bottom">
            <strong class="d-block text-gray-dark">
              <%=comment.name%>
            </strong>
            <%=comment.comment%>
          </p>
        </div>
        <% }) %>

          <small class="d-block mt-3">
            <h5 class="mb-3">Write a comment..</h5>
            <form method="post" action="/news/add_comment">
              <div class="row">

                <div class="col-md-12">
                  <div class="form-group">
                    <input class="form-control" type="hidden" name="news_id" value="<%=item.id%>">
                    <input class="form-control" type="text" name="name" placeholder="Your Name">
                  </div>
                  <div class="form-group mt-3">
                    <textarea class="form-control" rows="9" name="comment" placeholder="Your reply"></textarea>
                  </div>
                  <div class="form-group">

                    <small class="d-block text-end mt-3">
                      <button id="btn_submit_reply" type="submit" class="btn btn-success btn-block">
                        <i class="fa fa-comment"></i> Submit reply
                      </button>
                      <a href="/news" class="btn btn-primary">Back</a>
                    </small>
                  </div>
                </div>
              </div>
            </form>
          </small>
    </div>
  </main>
  <%- include('templates/footer')-%>