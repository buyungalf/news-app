<%- include('templates/header')-%>
<div class="container">
  <header class="blog-header py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
      <div class="col-4 pt-1">
        <a class="link-secondary" href="#"></a>
      </div>
      <div class="col-4 text-center">
        <h1 class="text-center">TODAY'S NEWS</h1>
      </div>
      <div class="col-4 d-flex justify-content-end align-items-center">
        <a href="/news/add" class="btn btn-success mt-2">Add News</a>
      </div>
    </div>
  </header>
</div>

<main class="container">
  <div class="row mb-2">
    <%News.forEach(function(item){ %>
    <div class="col-md-12">
      <div
        class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative"
      >
        <div class="col p-4 d-flex flex-column position-static">
          <h3 class="mb-0"><%= item.title %></h3>
          <div class="mb-1 text-muted"><%= item.createdAt %></div>
          <p class="card-text mb-auto"><%= item.content.substring(0,80) %></p>
          <a href="/news/detail?id=<%= item.id %>">Continue reading</a>
          <div class="d-none d-none d-lg-block">
            <a href="/news/edit/<%= item.id %>" class="btn btn-primary mt-2"
              >Edit</a
            >
            <a href="/news/delete/<%= item.id %>" class="btn btn-danger mt-2"
              >Delete</a
            >
          </div>
        </div>
        <div class="col-auto d-none d-lg-block">
          <img src="<%= item.thumbnail %>" width="300px" alt="" />
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</main>
<%- include('templates/footer')-%>
