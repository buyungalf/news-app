<%- include('templates/header')-%>
<div class="container">
  <h1 class="text-center mt-2">TODAY'S NEWS</h1>
  <div class="card">
    <div class="card-header">List</div>
    <%News.forEach(function(item){ %>
    <div class="row mx-1">
      <div class="card-body d-flex">
        <img src="/<%=item.thumbnail%>" width="300px" alt="" />
        <div class="content mx-4">
          <h5 class="card-title"><%=item.title%></h5>
          <p class="card-text"><%=item.content.substring(0, 100)%></p>
          <a href="/news/detail?id=<%=item.id%>"> .. see more</a>
          <footer class="blockquote-footer mt-4">
            <cite title="Source Title"><%=item.author%></cite>
          </footer>
          <a href="/news/edit/<%=item.id%>" class="btn btn-primary mt-2"
            >Edit</a
          >
          <a href="/news/delete/<%=item.id%>" class="btn btn-danger mt-2"
            >Delete</a
          >
        </div>
      </div>
    </div>
    <hr class="article-line" />
    <% }) %>
  </div>
  <a href="/news/add" class="btn btn-success mt-2">Add News</a>
</div>
<%- include('templates/footer')-%>
